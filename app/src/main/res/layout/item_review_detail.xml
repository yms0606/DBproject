<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <LinearLayout
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/list_item"
            android:background="@drawable/list_background"
            android:elevation="10dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="3dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/image_linear"
                android:orientation="vertical"
                android:layout_weight="1.1"
                android:layout_width="0dp"
                android:layout_height="100dp">

                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/reivew_list_image"
                    android:background="#bbb"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.3"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="100dp">

                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:id="@+id/review_list_resname"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:text="식당 이름"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"/>

                    <ImageView
                        android:src="@drawable/icon_star"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_marginRight="20dp"
                        android:id="@+id/list_res_rating"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="4.5"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"/>

                </LinearLayout>


                <TextView
                    android:id="@+id/review_list_accname"
                    android:paddingLeft="40dp"
                    android:text="naver.com"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.2"/>

                <ImageButton
                    android:padding="5dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginLeft="100dp"
                    android:background="#fff"
                    android:scaleType="centerInside"
                    android:id="@+id/review_list_favbtn"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hidedView"
            android:padding="10dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:elevation="5dp"
                android:background="@drawable/list_background"
                android:paddingRight="100dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:paddingLeft="15dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_weight="0.6"
                    android:textStyle="bold"
                    android:text="LIKE"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:padding="10dp"
                    android:src="@drawable/icon_like"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/like_count_text"
                    android:gravity="center"
                    android:textAlignment="viewStart"
                    android:layout_weight="1"
                    android:text="0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:elevation="5dp"
                android:background="@drawable/list_background"
                android:paddingLeft="30dp"
                android:paddingRight="100dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/menu1_text"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="MENU1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/menu1_rating"
                    android:paddingLeft="20dp"
                    android:textColor="#0cf"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textAlignment="viewStart"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="3.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:elevation="5dp"
                android:background="@drawable/list_background"
                android:paddingLeft="30dp"
                android:paddingRight="100dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/menu2_text"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="MENU2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/menu2_rating"
                    android:paddingLeft="20dp"
                    android:textColor="#0cf"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textAlignment="viewStart"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="4.0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:elevation="5dp"
                android:background="@drawable/list_background"
                android:paddingLeft="30dp"
                android:paddingRight="100dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/menu3_text"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="MENU3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/menu3_rating"
                    android:paddingLeft="20dp"
                    android:textColor="#0cf"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textAlignment="viewStart"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="3.0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:elevation="5dp"
                android:background="@drawable/list_background"
                android:paddingLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="COMMENT"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/comment_text"
                    android:paddingLeft="10dp"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textAlignment="viewStart"
                    android:gravity="center"
                    android:layout_weight="1.8"
                    android:text="매장이 청결했어요!"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</layout>