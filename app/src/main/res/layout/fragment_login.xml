<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout

        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:elevation="15dp"
            android:background="@drawable/dialog_radius_background"
            android:layout_marginBottom="15dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/create_Email_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="24dp"
                android:hint="@string/prompt_email"
                android:selectAllOnFocus="true"
                />
            <EditText
                android:id="@+id/create_password_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:hint="@string/prompt_password"
                android:selectAllOnFocus="true" />

            <EditText
                android:id="@+id/create_phone_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="20dp"
                android:hint="Phone number"
                android:selectAllOnFocus="true" />


            <LinearLayout
                android:layout_margin="5dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="end"
                android:layout_weight="0.1"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/button_background"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:id="@+id/create_cancel_btn"
                    android:text="취소"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="12dp"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:id="@+id/create_add_btn"
                    android:text="계정 생성"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>